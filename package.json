{
  "name": "lokicms-plugin-mcp-auth",
  "version": "1.1.0",
  "description": "Role-based authentication and tool filtering plugin for LokiCMS MCP servers",
  "keywords": [
    "lokicms",
    "lokicms-plugin",
    "mcp",
    "model-context-protocol",
    "authentication",
    "authorization",
    "rbac",
    "role-based-access-control",
    "ai-agents",
    "cms"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MauricioPerera/lokicms-plugin-mcp-auth.git"
  },
  "bugs": {
    "url": "https://github.com/MauricioPerera/lokicms-plugin-mcp-auth/issues"
  },
  "homepage": "https://github.com/MauricioPerera/lokicms-plugin-mcp-auth#readme",
  "lokicms": {
    "displayName": "MCP Auth",
    "minVersion": "1.0.0"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./plugin": {
      "import": "./dist/plugin.js",
      "types": "./dist/plugin.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware.js",
      "types": "./dist/middleware.d.ts"
    },
    "./auth": {
      "import": "./dist/mcp-auth.js",
      "types": "./dist/mcp-auth.d.ts"
    }
  },
  "files": [
    "dist",
    "server.ts",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "tsx server.ts",
    "start:admin": "AGENT_ROLE=admin tsx server.ts",
    "start:editor": "AGENT_ROLE=editor tsx server.ts",
    "start:viewer": "AGENT_ROLE=viewer tsx server.ts",
    "test": "tsx src/__tests__/index.test.ts",
    "test:watch": "tsx watch src/__tests__/index.test.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "loki-cms": "^1.0.0",
    "@modelcontextprotocol/sdk": ">=0.5.0"
  },
  "peerDependenciesMeta": {
    "loki-cms": {
      "optional": false
    },
    "@modelcontextprotocol/sdk": {
      "optional": true
    }
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
